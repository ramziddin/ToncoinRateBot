{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "files": ["./src/locales/ENGLISH.json", "./src/locales/RUSSIAN.json"]
}
