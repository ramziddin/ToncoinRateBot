{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
